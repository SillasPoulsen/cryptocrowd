      <button>Sign up</button>
    </a>

    <a href="/login">
      <button>Login</button>
    </a>
  {{/if}}

</div>

<div>
  {{#each event}}
    <a href="events/{{this._id}}">
    <div>
      <h1>{{this.title}}</h1>
      <img src={{this.eventHeader}} />
      <h2>Coin: {{this.coin}}</h2>
      <p>Description: {{this.description}}</p>
      <p>Attending: {{this.attendees}}</p>
      </a>
    </div>
  {{/each}}
</div>