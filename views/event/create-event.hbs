<h1>Create a new event!</h1>

<form
  id="form"
  action="/create-event"
  method="POST"
  enctype="multipart/form-data"
>

  <label for="title">Title</label><br />
  <input type="text" name="title" placeholder="Title of the event" />
  <br />

  <label for="coin">Coin</label><br />
  <input type="text" name="coin" placeholder="Crypto currency of the event" />

  <label for="date">Date</label><br />
  <input type="date" name="date" placeholder="Date of the event" />

  <label for="location">Location</label><br />
  <input type="text" name="location" placeholder="Location of the event" />

  <label for="description">Description</label><br />
  <textarea
    rows="4"
    cols="50"
    name="description"
    placeholder="Description of the event"
  ></textarea>
  <br />
  <label for="eventHeader">Event Cover Image</label>
  <input type="file" name="eventHeader" />

  <br />
  <button type="submit">Create event</button>
</form>

{{! error message display: }}

{{#if errorMessage}}
  <div class="error-message">{{errorMessage}}</div>
{{/if}}

