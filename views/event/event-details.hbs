<div class="jumbotron jumbotron-fluid">
  <img src="{{event.eventHeader}}" class="img-fluid" alt="Responsive image" />
  <div class="container">
    <div class="headercontainer">
      <h1 class="display-4">{{event.title}}</h1>
    </div>
    <div class="btncontainer">
      <form action="{{event.id}}" method="POST">
        <a href="/"><button class="btn btn-success">Attend</button></a> 
      </form>
      {{#if isOrganizer}}
        <a href="edit/{{event.id}}"><button
            type="submit"
            class="btn btn-secondary"
          >Edit</button></a>
        <form action="delete/{{event.id}}" method="POST">
          <a href="delete/{{event.id}}"><button
              type="submit"
              class="btn btn-danger"
            >Delete</button></a>
        </form>
      {{/if}}

      {{#if errorMessage}}
      <div class="error-message">{{errorMessage}}</div>
      {{/if}}

    </div>
  </div>
</div>
