<div id="container">
  <header class="p-3 bg-dark text-white">
    <div class="container">
      <div
        class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start"
      >
        <a
          href="/"
          class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none"
        >

          <img id="logo" src="/images/cryptoc-logo.jpeg" />

        </a>
        <ul
          class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0"
        ></ul>

        <!-- <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
            <input
              type="search"
              class="form-control form-control-dark"
              placeholder="Search..."
              aria-label="Search"
            />
          </form> -->

        <ul
          class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-end mb-md-0"
        >
          <li><a href="/create-event">
              <button type="button" class="btn btn-outline-light me-2">
                Create an Event
              </button>
            </a></li>

        </ul>
        <div class="flex-shrink-0 dropdown">

          <a
            href="/"
            class="d-block link-dark text-decoration-none"
            id="dropdownUser2"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <img
              src="/images/user.png"
              alt="mdo"
              width="45"
              height="45"
              class="rounded-circle"
            />
          </a>
          <ul
            class="dropdown-menu text-small shadow"
            aria-labelledby="dropdownUser2"
          >
            <li><a class="dropdown-item" href="/profile">Profile</a></li>
            <li><hr class="dropdown-divider" /></li>
            <li><a class="dropdown-item" href="/logout">Log out</a></li>
          </ul>
        </div>

      </div>
    </div>
  </header>

  <!-- ? HEADER AFTER LOGIN -->

  {{! <a href="/create-event">
    <button>Create a new event</button>
  </a> }}
  {{! 
  <a href="/logout">
    <button>Logout</button>
  </a> }}
  {{! 
  <a href="/signup">
    <button>Sign up</button>
  </a> }}
  {{! 
  <a href="/login">
    <button>Login</button>
  </a> }}

</div>

<div class="center-div">
  <div class="profile-view">
<h1>Hi, {{user.username}}!</h1>
<p> You are are attending these events:</p>
{{#each user.attending}}
{{this.title}}
{{/each}}
</div>

<div class="center-div">

  <h1>You are attending these event:</h1>

  {{#each user.attending}}
    <a href="events/{{this._id}}">
      <div class="card mb-2 mt-3 shadow-sm">
        <img src={{this.eventHeader}} class="card-img-top" alt="..." />
        <div class="card-body">
          <h1 class="card-title">{{this.title}}</h1>
          <h6>Coin: {{this.coin}}</h6>
          <p class="card-text" class="text-muted">
            {{this.description}}
          </p>
        </div>
      </div>
    </a>
  {{/each}}

   <h1>You have Organized these events:</h1>

  {{#each user.eventCreated}}
  <a href="events/{{this._id}}">
    <div class="card mb-2 mt-3 shadow-sm">
      <img src={{this.eventHeader}} class="card-img-top" alt="..." />
      <div class="card-body">
        <h1 class="card-title">{{this.title}}</h1>
        <h6>Coin: {{this.coin}}</h6>
        <p class="card-text" class="text-muted">
          {{this.description}}
        </p>
      </div>
    </div>
  </a>
{{/each}}

</div>